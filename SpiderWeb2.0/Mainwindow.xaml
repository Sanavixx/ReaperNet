<Window 
    x:Class="SpiderWeb2._0.Mainwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SpiderWeb2._0"
    mc:Ignorable="d"
    Title="Mainwindow" 
    Height="800" 
    Width="1300"
    ResizeMode="CanMinimize"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Toggle Button Style Template -->

        <ImageBrush x:Key="NavigationMenuToggleButton_MouseOver" ImageSource="Assets/tgBtn_MouseOver.png"/>

        <!-- Text Font Style -->

        <Style x:Key="FontStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Fonts/SpaceGrotesk-Regular.ttf"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <!-- ComputerName TextBox Font Style -->

        <Style x:Key="ComputerNameTextBlockStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Height" Value="62"/>
            <Setter Property="Width" Value="530"/>
            <Setter Property="FontFamily" Value="Fonts/SpaceGrotesk-Regular.ttf"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#EAF16F"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <!-- ComputerName Label Font Style -->

        <Style x:Key="ComputerNameLabelResults" TargetType="Label">
            <Setter Property="FontFamily" Value="Fonts/SpaceGrotesk-Regular.ttf"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- ComputerName RichTextBlock Font Style -->

        <Style x:Key="ComputerNameRichTextBoxStyle" TargetType="RichTextBox">
            <Setter Property="Padding" Value="22,0,20,20"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Width" Value="530"/>
            <Setter Property="FontFamily" Value="Lucida Sans Typewriter"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#EAF16F"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Tooltip Navigation Style Template -->

        <Style TargetType="ToolTip" x:Key="ToolTipStyleNavigationMenu">
            <Setter Property="Placement" Value="Right"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#4A5668"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Fonts/SpaceGrotesk-Regular.ttf"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="PlacementRectangle" Value="60,0,0,0"/>
            <Setter Property="HorizontalOffset" Value="15"/>
            <Setter Property="VerticalOffset" Value="16"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Tooltip Tray Icons Style Template -->

        <Style TargetType="ToolTip" x:Key="ToolTipStyleTrayButtons">
            <Setter Property="Placement" Value="Bottom"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#4A5668"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Fonts/SpaceGrotesk-Regular.ttf"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="PlacementRectangle" Value="-125,50,0,0"/>
            <Setter Property="HorizontalOffset" Value="0"/>
            <Setter Property="VerticalOffset" Value="0"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Application Close Button Style -->

        <ImageBrush x:Key="CloseButton_Mouseover" ImageSource="Assets/closeBtn_Mouseover.png"/>
        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border 
                            x:Name="CloseButtonStyleBorder"
                            BorderThickness="0"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect 
                                    BlurRadius="4" 
                                    Direction="330" 
                                    Color="Black"
                                    ShadowDepth="4"
                                    Opacity="1">
                                </DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter 
                                    Property="Background"
                                    TargetName="CloseButtonStyleBorder"
                                    Value="{StaticResource CloseButton_Mouseover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Application Minimize Button Style -->

        <ImageBrush x:Key="MinimizeButton_Mouseover" ImageSource="Assets/minBtn_Mouseover.png"/>
        <Style x:Key="MinimizeButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border 
                            x:Name="MinimizeButtonStyleBorder"
                            BorderThickness="0"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect 
                                    BlurRadius="4" 
                                    Direction="330" 
                                    Color="Black"
                                    ShadowDepth="4"
                                    Opacity="1">
                                </DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"
                                        TargetName="MinimizeButtonStyleBorder"
                                        Value="{StaticResource MinimizeButton_Mouseover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Home Buttons Style -->

        <Style x:Key="HomeButtonsStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="HomeButtonBorder" Background="#26534e" BorderThickness="0">
                            <ContentPresenter 
                                Content="{TemplateBinding Content}"  
                                TextBlock.Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                x:Name="HomeButtonContentPresenter"
                                TextBlock.FontSize="20"
                                TextBlock.FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                                TextBlock.FontWeight="Bold">
                            </ContentPresenter>
                            <Border.Effect>
                                <DropShadowEffect 
                                    BlurRadius="4" 
                                    Direction="330" 
                                    Color="Black"
                                    ShadowDepth="4"
                                    Opacity="1">
                                </DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter 
                                    TargetName="HomeButtonBorder" 
                                    Property="Background" 
                                    Value="#B4B4B4"></Setter>
                                <Setter 
                                    TargetName="HomeButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="Black"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter 
                                    TargetName="HomeButtonBorder" 
                                    Property="Background" 
                                    Value="#3B7E76"></Setter>
                                <Setter 
                                    TargetName="HomeButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="White"></Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter 
                                    TargetName="HomeButtonBorder" 
                                    Property="Background" 
                                    Value="#459289"></Setter>
                                <Setter 
                                    TargetName="HomeButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Comp/OS Buttons Style -->

        <Style x:Key="CompOSButtonsStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CompOSButtonBorder" Background="#4F5124" BorderThickness="0">
                            <ContentPresenter 
                                Content="{TemplateBinding Content}"  
                                TextBlock.Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                x:Name="CompOSButtonContentPresenter"
                                TextBlock.FontSize="20"
                                TextBlock.FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                                TextBlock.FontWeight="Bold">
                            </ContentPresenter>
                            <Border.Effect>
                                <DropShadowEffect 
                                    BlurRadius="4" 
                                    Direction="330" 
                                    Color="Black"
                                    ShadowDepth="4"
                                    Opacity="1">
                                </DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter 
                                    TargetName="CompOSButtonBorder" 
                                    Property="Background" 
                                    Value="#4F5124"></Setter>
                                <Setter 
                                    TargetName="CompOSButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="Black"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter 
                                    TargetName="CompOSButtonBorder" 
                                    Property="Background" 
                                    Value="#767A37"></Setter>
                                <Setter 
                                    TargetName="CompOSButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="White"></Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter 
                                    TargetName="CompOSButtonBorder" 
                                    Property="Background" 
                                    Value="#9BA048"></Setter>
                                <Setter 
                                    TargetName="CompOSButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Start Button Style -->

        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="StartButtonBorder" Background="#435EA8" BorderThickness="0">
                            <ContentPresenter 
                                Content="{TemplateBinding Content}"  
                                TextBlock.Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                x:Name="StartButtonContentPresenter"
                                TextBlock.FontSize="20"
                                TextBlock.FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                                TextBlock.FontWeight="Bold">
                            </ContentPresenter>
                            <Border.Effect>
                                <DropShadowEffect 
                                    BlurRadius="4" 
                                    Direction="330" 
                                    Color="Black"
                                    ShadowDepth="4"
                                    Opacity="1">
                                </DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter 
                                    TargetName="StartButtonBorder" 
                                    Property="Background" 
                                    Value="#B4B4B4"></Setter>
                                <Setter 
                                    TargetName="StartButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="Black"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter 
                                    TargetName="StartButtonBorder" 
                                    Property="Background" 
                                    Value="#5070C6"></Setter>
                                <Setter 
                                    TargetName="StartButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="White"></Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter 
                                    TargetName="StartButtonBorder" 
                                    Property="Background" 
                                    Value="#5E83E8"></Setter>
                                <Setter 
                                    TargetName="StartButtonContentPresenter" 
                                    Property="TextBlock.Foreground" 
                                    Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->

        <Style x:Key="ToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border 
                            x:Name="ToggleButtonBorder"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter 
                                    Property="Background"
                                    TargetName="ToggleButtonBorder"
                                    Value="{StaticResource NavigationMenuToggleButton_MouseOver}"/>
                                <Setter 
                                    Property="BorderBrush"
                                    TargetName="ToggleButtonBorder"
                                    Value="{StaticResource NavigationMenuToggleButton_MouseOver}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter 
                                    Property="Background"
                                    TargetName="ToggleButtonBorder"
                                    Value="{StaticResource NavigationMenuToggleButton_MouseOver}"/>
                                <Setter 
                                    Property="BorderBrush"
                                    TargetName="ToggleButtonBorder"
                                    Value="{StaticResource NavigationMenuToggleButton_MouseOver}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <!-- Background Color -->

        <Grid Background="Black">

            <!-- Home Page -->

            <Grid x:Name="HomePage">

                <Grid 
                    x:Name="HomePageBackground" 
                    PreviewMouseLeftButtonDown="BG_PreviewMouseLeftButtonDown">
                    <Grid.Background>

                        <!-- Background Image -->

                        <ImageBrush ImageSource="Assets/img_background.png"
                                    Stretch="Fill"
                                    x:Name="HomePageBackgroundImage"/>
                    </Grid.Background>
                </Grid>

                <Grid 
                    x:Name="SpiderWebTitle"
                    HorizontalAlignment="Left"
                    Margin="230,0,0,0"
                    Width="1070"
                    Height="800"
                    Background="Transparent">
                    <StackPanel 
                        x:Name="SpiderWebTitlePanel"
                        HorizontalAlignment="Left"
                        Margin='100,550,0,69'>

                        <!-- Menu Toggle Button -->

                        <Grid Height="201" Width="389">

                            <!-- Menu Title Text -->

                            <TextBlock 
                                Grid.Column="0"
                                Margin="0,76,0,62"
                                Text="SpiderWeb"
                                Foreground="White"
                                FontSize="50"
                                FontWeight="Bold"
                                Background="Transparent"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Style="{StaticResource FontStyle}" 
                                Width="379" 
                                Height="63">
       
                            <!-- Shadow Effect -->

                                <TextBlock.Effect>
                                    <DropShadowEffect 
                                        BlurRadius="10"
                                        ShadowDepth="1"
                                        Direction="-90"
                                        Color="DarkBlue"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock 
                                Grid.Column="0"
                                Margin="0,139,0,21"
                                Text="v2.0"
                                Foreground="White"
                                FontSize="40"
                                FontWeight="Bold"
                                FontStyle="Italic"
                                Background="Transparent"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Style="{StaticResource FontStyle}" 
                                Width="300" 
                                Height="41">
                                
                            <!-- Shadow Effect -->

                                <TextBlock.Effect>
                                    <DropShadowEffect 
                                        BlurRadius="10"
                                        ShadowDepth="1"
                                        Direction="-90"
                                        Color="DarkBlue"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Release Notes Window -->

                <Grid 
                    x:Name="ReleaseNotesWindow"
                    HorizontalAlignment="Left"
                    Margin="400,-150,0,0"
                    Width="830"
                    Height="520"
                    Opacity="0">
                    <Grid.Background>
                        <SolidColorBrush x:Name="ReleaseNotesWindowOpacity" Color="Black" Opacity=".85"/>
                    </Grid.Background>
                    <Border BorderBrush="White" BorderThickness="2"/>
                    <TextBlock 
                        x:Name="ReleaseNotesWindowTitle" 
                        Margin="15,15,15,15" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        TextAlignment="Left"
                        Foreground="White"
                        FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                        FontSize="40"
                        Width="auto"
                        Height="auto">
                        
                        Release Update - May 9, 2020

                    </TextBlock>
                    <TextBlock 
                        x:Name="ReleaseNotesWindowNew" 
                        Margin="15,80,15,15" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        TextAlignment="Left"
                        Foreground="White"
                        FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                        FontSize="32"
                        Width="auto"
                        Height="auto">
                        
                        New + Improved
                        <LineBreak/>
                        <Line X1="0" Y1="0" X2="800" Y2="0" Stroke="White" StrokeThickness="2" Opacity=".5"/>

                    </TextBlock>
                    <TextBlock 
                        x:Name="ReleaseNotesWindowNewDetails" 
                        Margin="15,110,15,15" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        TextAlignment="Left"
                        Foreground="White"
                        FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                        FontSize="20"
                        Width="auto"
                        Height="auto"
                        TextWrapping="Wrap">
                        
                        <LineBreak/>
                        - SpiderWeb has been rewritten in WPF, XAML and C#.  This is intentional due to
                        Microsoft's succession of Windows Forms to these newer Frameworks, as well as providing
                        more extensive developmental features.
                        <LineBreak/>
                        <LineBreak/>
                        - Major overhaul of DRA scripts and implementation within GUI for user manipulation
                        of variables.
                        <LineBreak/>
                        <LineBreak/>
                        - Now packaged as an Executable!

                    </TextBlock>
                    <TextBlock 
                        x:Name="ReleaseNotesWindowFixes" 
                        Margin="15,350,15,15" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        TextAlignment="Left"
                        Foreground="White"
                        FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                        FontSize="32"
                        Width="auto"
                        Height="auto">
                        
                        Fixes
                        <LineBreak/>
                        <Line X1="0" Y1="0" X2="800" Y2="0" Stroke="White" StrokeThickness="2" Opacity=".5"/>

                    </TextBlock>
                    <TextBlock 
                        x:Name="ReleaseNotesWindowFixesDetails" 
                        Margin="15,380,15,15" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        TextAlignment="Left"
                        Foreground="White"
                        FontFamily="Fonts/SpaceGrotesk-Regular.ttf"
                        FontSize="20"
                        Width="auto"
                        Height="auto"
                        TextWrapping="Wrap">
                        
                        <LineBreak/>
                        - Minor revisions to several scripts to improve efficiency.

                    </TextBlock>

                    <!-- Release Notes Close Button -->

                    <Button 
                        Content="Close" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Width="175"
                        Height="35"
                        Margin="318,0,0,30"
                        Name="CloseReleaseNotesButton"
                        Style="{StaticResource HomeButtonsStyle}" 
                        Click="CloseReleaseNotesButton_Click">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard x:Name="CloseReleaseNotesWindow">
                                        <DoubleAnimation 
                                            Storyboard.TargetName="ReleaseNotesWindow"
                                            Storyboard.TargetProperty="Opacity"
                                            BeginTime="0:0:0"
                                            From="1" To="0"
                                            Duration="0:0:0.2">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                </Grid>

                <!-- Release Notes Button -->

                <Button 
                    Content="Release Notes" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="175"
                    Height="35"
                    Margin="328,742,0,0"
                    Name="ShowReleaseNotesButton"
                    Style="{StaticResource HomeButtonsStyle}" 
                    Click="ShowReleaseNotesButton_Click">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard x:Name="ShowReleaseNotesWindow">
                                    <DoubleAnimation 
                                        Storyboard.TargetName="ReleaseNotesWindow"
                                        Storyboard.TargetProperty="Opacity"
                                        BeginTime="0:0:0"
                                        From="0" To="1"
                                        Duration="0:0:0.2">
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

                <!-- Folder Shortcuts Button -->

                <Button 
                    Content="Folder Shortcuts" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="175"
                    Height="35"
                    Margin="528,742,0,0"
                    Name="ShowFolderShortcutsButton"
                    Style="{StaticResource HomeButtonsStyle}" 
                    Click="ShowFolderShortcutsButton_Click"/>

                <!-- External Links Button -->

                <Button 
                    Content="External Links" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="175"
                    Height="35"
                    Margin="728,742,0,0"
                    Name="ShowExternalLinksButton"
                    Style="{StaticResource HomeButtonsStyle}" Click="ShowExternalLinksButton_Click"/>
            </Grid>

            <!-- Comp/OS Page -->

            <Grid x:Name="Comp_OSPage">

                <Grid 
                    x:Name="Comp_OSBackground" 
                    PreviewMouseLeftButtonDown="BG_PreviewMouseLeftButtonDown">
                    <Grid.Background>

                        <!-- Background Image -->

                        <ImageBrush ImageSource="Assets/comp_background.png"
                                    Stretch="Fill"
                                    x:Name="Comp_OSBackgroundImage"/>
                    </Grid.Background>
                </Grid>
                <Grid 
                    x:Name="CompOSTitle"
                    HorizontalAlignment="Left"
                    Margin="230,0,0,0"
                    Width="1070"
                    Height="800"
                    Background="Transparent">
                    <Grid 
                        x:Name="CompOSMainGrid"
                        Margin="495,70,35,15">
                        <TextBlock 
                            Margin="111,37,98,628"
                            Text="Computer Name:"
                            Foreground="White"
                            FontSize="40"
                            FontWeight="Bold"
                            FontStyle="Italic"
                            Background="Transparent"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource FontStyle}" 
                            Width="331" 
                            Height="50">

                            <TextBlock.Effect>
                                <DropShadowEffect 
                                    BlurRadius="10"
                                    ShadowDepth="3"
                                    Direction="-90"
                                    Color="DarkBlue"/>
                            </TextBlock.Effect>
